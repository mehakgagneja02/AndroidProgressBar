<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context="edmt.dev.androidcircularseekbar.MainActivity"
    android:orientation="vertical">

    <com.akaita.android.circularseekbar.CircularSeekBar
        android:id="@+id/seekbar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:enabled="true"
        app:innerCircleColor="@android:color/black"
        app:max="31"
        app:min="0"
        app:progress="0"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="30dp"
        app:progressTextColor="@android:color/white"
        app:progressTextSize="26"
        app:ringColor="@android:color/holo_purple"
        app:ringWidth="0.5"
        app:showIndicator="true"
        app:showInnerCircle="true"
        app:showProgressText="true"
        app:speedMultiplier="5" />

    <com.akaita.android.circularseekbar.CircularSeekBar
        android:id="@+id/seekbar1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:enabled="true"
        app:innerCircleColor="@android:color/black"
        app:max="12"
        app:min="0"
        app:progress="0"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="30dp"
        app:progressTextColor="@android:color/white"
        app:progressTextSize="26"
        app:ringColor="@android:color/holo_purple"
        app:ringWidth="0.5"
        app:showIndicator="true"
        app:showInnerCircle="true"
        app:showProgressText="true"
        app:speedMultiplier="5" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/txt"
        android:layout_width="100dp"
        android:layout_height="21dp"
        android:layout_marginLeft="100dp"
        android:hint="Date"
        android:textColorHint="@android:color/white"
        android:textAlignment="center"
        android:textColor="#FFFCFC"
        android:textSize="18sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/txt1"
        android:layout_width="100dp"
        android:textColor="@android:color/white"
        android:layout_height="21dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="100dp"
        android:hint="Month"
        android:textColorHint="@android:color/white"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>

</LinearLayout>